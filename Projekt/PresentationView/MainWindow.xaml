<Window x:Class="PresentationView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:PresentationViewModel;assembly=PresentationViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:MyViewModel/>
    </Window.DataContext>


    <Grid Background="#808080">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="264*"/>
            <ColumnDefinition Width="271*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="44*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Stroke="Black" 
                   StrokeThickness="5"
                   Height="{Binding HeightOfViewRectangle}" 
                   Width="{Binding WidthOfViewRectangle,UpdateSourceTrigger=PropertyChanged}" 
                   Grid.Column="1"
                   VerticalAlignment="Top"
                   Grid.Row="0"
                   Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="79,27,67,0"
                   />




        <Label Content="Podaj liczbe kuli:" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="-4,152,0,0"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" FontSize="16" Height="55"/>
        <TextBox Text="{Binding NumOfBalls,UpdateSourceTrigger=PropertyChanged}" Margin="0,26,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="22" Grid.Row="1" />

        <!--        <Label  VerticalContentAlignment="Center" VerticalAlignment="Bottom" Grid.Column="4" Margin="0,0,0,0" Grid.ColumnSpan="3"  HorizontalContentAlignment="Center" HorizontalAlignment="Center" FontSize="16">
          <Label.Content>
                <AccessText TextWrapping="Wrap"  Text="Ilość aktualnie animowanych kul:"></AccessText>
            </Label.Content>
       </Label>
-->


        <!--<Label Content="{Binding NumOfBalls}" Grid.Column="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Background="#FFF5A3A3"/>-->

        <Button Content="Dodaj kule" VerticalAlignment="Top" Margin="20,25,231,0" Click="Button_Click"  Grid.Column="0" Height="30" Command="{Binding CommandStartTheSimulation}" Grid.ColumnSpan="2"/>
        <Button Content="Usuń wszystkie kule" VerticalAlignment="Top" Margin="26,79,231,0" Click="Button_Click" Height="30" Command="{Binding CommandStopTheSimulation}" Grid.ColumnSpan="2"/>

        <ItemsControl ItemsSource="{Binding ballModelAPIs}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="83,32,0,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Width="370" Height="370" Background="#add8e6"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding X,UpdateSourceTrigger=PropertyChanged}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Y,UpdateSourceTrigger=PropertyChanged}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Ellipse Height="{Binding R}" Width="{Binding R}" Stroke="BlanchedAlmond" Fill="Green"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</Window>
